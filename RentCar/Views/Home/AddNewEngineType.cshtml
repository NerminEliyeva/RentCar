<div class="containersecimpenceresi">
    <div class="birSecim">
        <h1>Mühərrik tipi əlavə edin</h1>
        <div class="addNewEngineTypeForm">
            <form action="">
                <input type="text" placeholder="Mühərrik tipi" id="newEngineType" >
                  <button class="submitEngineType">Əlavə et</button>
            </form>
        </div>
    </div>
</div>

<script>
    $('.submitEngineType').on("click",function(e) {
    e.preventDefault()
      var frontEngineTypeName = $("#newEngineType").val();

        $.ajax({
                 type: "POST",
                 url: '@Url.Action("SaveNewEngineType","Home")',
                 data:{"engineTypeName":frontEngineTypeName},
                 cache: false,
                  dataType: "json",
                 success:function (data) {
                      Swal.fire({
                             icon: 'success',
                             title: 'Yeni ' + frontEngineTypeName + ' mühərrik novü əlavə olundu',
                             showConfirmButton: false,
                             timer: 1500
                          })
                   $("#newEngineType").val("");
                 },
                 error: function () {
                     Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Xəta baş verdi!',
                          })
                 }
             });
    });


</script>
